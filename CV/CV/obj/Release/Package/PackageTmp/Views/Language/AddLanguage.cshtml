@model CV.Models.Entity.Languages
@{
    ViewBag.Title = "AddLanguage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<header class="d-flex justify-content-center py-3 bg-white border-bottom">
    <h2>Add Language Page</h2>
</header>
<br />
<form method="post">
    @Html.Label("Language")
    @Html.TextBoxFor(x => x.LANGUAGE, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.LANGUAGE, "", new { @style = "color:red" })
    <br />
    @Html.Label("Success")
    @Html.TextBoxFor(x => x.SUCCSESS, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.SUCCSESS, "", new { @style = "color:red" })
    <br />

    <button class="btn btn-info">Save</button>
</form>