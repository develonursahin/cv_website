@using CV.Models.Entity
@model List<Languages>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{ string color = "";}
<header class="d-flex justify-content-center py-3 bg-white border-bottom">
    <h2>Lanugage Page</h2>
</header>
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <!-- /.card-header -->
                            <div class="card-body">
                                <a href="/Language/AddLanguage/" class="btn btn-primary">Add New Language</a>
                                <br />
                                <br />
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">#</th>
                                            <th>ID</th>
                                            <th>Language</th>
                                            <th style="width: 40px">Success</th>
                                            <th>Edit</th>
                                            <th>Delete</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            if (item.SUCCSESS >= 0 && item.SUCCSESS <= 25)
                                            {
                                                color = "progress-bar bg-danger";
                                            }
                                            if (item.SUCCSESS >= 26 && item.SUCCSESS <= 50)
                                            {
                                                color = "progress-bar bg-warning";
                                            }
                                            if (item.SUCCSESS >= 51 && item.SUCCSESS <= 75)
                                            {
                                                color = "progress-bar bg-primary";
                                            }
                                            if (item.SUCCSESS >= 76 && item.SUCCSESS <= 100)
                                            {
                                                color = "progress-bar bg-success";
                                            }
                                            <tr>
                                                <td>@item.ID</td>
                                                <td>@item.LANGUAGE</td>
                                                <td>
                                                    <div class="progress progress-xs">
                                                        <div class="@color" style="width: @item.SUCCSESS%"></div>
                                                    </div>
                                                </td>
                                                <td><span class="@color">@item.SUCCSESS%</span></td>
                                                <td>
                                                    <a href="/Language/EditLanguage/@item.ID" class="btn btn-info btn-sm">
                                                        <i class="fas fa-pencil-alt">
                                                        </i>
                                                        Update
                                                    </a>
                                                </td>
                                                <td>
                                                    <a href="/Language/DeleteLanguage/@item.ID" class="btn btn-danger btn-sm">
                                                        <i class="fas fa-trash">
                                                        </i>
                                                        Delete
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!-- /.card -->
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
</body>
</html>

